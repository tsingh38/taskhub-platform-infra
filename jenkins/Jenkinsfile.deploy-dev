pipeline {
  agent any
  options { disableConcurrentBuilds() }

  parameters {
    string(name: 'IMAGE_TAG', defaultValue: '', description: 'Docker image tag to deploy to DEV (required)')
  }

  environment {
    KUBECONFIG = "/var/lib/jenkins/.kube/config"

    NAMESPACE  = "dev"
    RELEASE    = "task-service"
    IMAGE_REPO = "tsingh38/taskhub"

    CHART_DIR  = "infra/helm/charts/task-service"
    VALUES_REL = "values-dev.yaml"
  }

  stages {

    stage('Checkout') {
      steps { checkout scm }
    }

    stage('Validate') {
      steps {
        script {
          echo "DEBUG: IMAGE_TAG='${params.IMAGE_TAG}'"
          if (!params.IMAGE_TAG?.trim()) {
            error("IMAGE_TAG is required. This job must be triggered via 'Build with Parameters' or from CI passing IMAGE_TAG.")
          }
        }

        sh '''
          set -eu
          test -f "$KUBECONFIG"
          test -d "$CHART_DIR"
          test -f "$CHART_DIR/$VALUES_REL"
        '''
      }
    }

    stage('Helm Upgrade DEV (task-service only)') {
      steps {
        dir("${env.CHART_DIR}") {
          sh '''
            set -eu
            export KUBECONFIG="$KUBECONFIG"

            echo "Deploying: ${RELEASE} to ${NAMESPACE} with image ${IMAGE_REPO}:${IMAGE_TAG}"
            helm upgrade --install "$RELEASE" . \
              -n "$NAMESPACE" --create-namespace \
              -f "$VALUES_REL" \
              --set image.repository="$IMAGE_REPO" \
              --set image.tag="$IMAGE_TAG" \
              --wait --timeout 7m --atomic
          '''
        }
      }
    }

    stage('Post-Deploy Checks') {
      steps {
        sh '''
          set -eu
          export KUBECONFIG="$KUBECONFIG"
          kubectl -n dev get pods -o wide || true
          kubectl -n dev get svc task-service -o wide || true
          helm -n dev status task-service | sed -n '1,50p' || true
        '''
      }
    }
  }

  post {
    success { echo "DEV Deploy Success" }
    failure { echo "DEV Deploy Failed" }
  }
}